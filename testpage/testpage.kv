<TestPage>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.828, 0.917, 0.972, 1  # Set the background color (r, g, b, a)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 100
            padding: 10
            spacing: 10

            canvas.before:
                Color:
                    rgba: 0, 0.382, 0.597, 1  # Set the background color for the header
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'horizontal'
                halign: 'center'
                valign: 'middle'
                padding: 60, 0
                spacing: 30

                Image:
                    source:  'img.png'
                    size_hint: None, None
                    size: 70, 70
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Label:
                    text: '[b]SISTEM KLASIFIKASI TANAMAN OBAT BERDASARKAN CITRA DAUN METODE FUZZY KNN[/b]'
                    font_size: 30
                    color: 1,1,1, 1  # Text color white
                    markup: True
                    valign: 'middle'
                    text_size: self.size

        Widget:
            height: 10

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 30
            size_hint: None, None
            pos_hint: {'center_x': 0.5}
            width: self.minimum_width
            height: self.minimum_height

            Label:
                text: 'Test Menu'
                font_size: 40
                color: 0, 0, 0, 1
                pos_hint: {'center_x': 0.5}

            Widget:
                size_hint_y: None
                height: 10

            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                spacing: 120
                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                width: self.minimum_width
                height: self.minimum_height

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10
                    size_hint: None, None
                    pos_hint: {'center_x': 0.5}
                    width: self.minimum_width
                    height: self.minimum_height

                    Image:
                        id: image_test
                        source: 'no_image.png'
                        size_hint: None, None
                        size: 150, 150
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    Widget:
                        size_hint_y: None
                        height: 10

                    Button:
                        text: 'Input Image'
                        size_hint: None, None
                        size: 150, 40
                        pos_hint: {'center_x': 0.5}
                        background_color: 0.2, 0.3, 0.9, 1
                        on_release: root.select_image()

                    Widget:
                        size_hint_y: None
                        height: 1

                    Label:
                        id: image_path
                        text: 'Menunggu image input'
                        color: 0, 0, 0, 1
                        pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 20
                    size_hint: None, None
                    pos_hint: {'center_x': 0.5}
                    width: self.minimum_width
                    height: self.minimum_height

                    Label:
                        text: 'Nilai K'
                        color: 0, 0, 0, 1
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: input_box
                        hint_text: 'Type here'
                        size_hint: None, None
                        size: 200, 40
                        pos_hint: {'center_x': 0.5}
                        multiline: False

                    Button:
                        text: 'Test'
                        size_hint: None, None
                        size: 150, 40
                        pos_hint: {'center_x': 0.5}
                        background_color: 0.2, 0.3, 0.9, 1
                        on_release: root.test()

                    Widget:
                        size_hint_y: None
                        height: 1

            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                spacing: 300
                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                width: self.minimum_width
                height: self.minimum_height

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 40
                    size_hint: None, None
                    pos_hint: {'center_x': 0.5}
                    width: self.minimum_width
                    height: self.minimum_height

                    Label:
                        text: 'Nilai Test'
                        color: 0, 0, 0, 1
                        font_size: 24
                        halign: 'left'

                    Label:
                        id: Nilai_lbp
                        text: 'Nilai Lbp :'
                        color: 0, 0, 0, 1
                        halign: 'left'

                    Label:
                        id: Nilai_hog
                        text: 'Nilai Hog :'
                        color: 0, 0, 0, 1
                        halign: 'left'


                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 40
                    size_hint: None, None
                    pos_hint: {'center_x': 0.5}
                    width: self.minimum_width
                    height: self.minimum_height

                    Label:
                        text: 'Confidence'
                        color: 0, 0, 0, 1
                        font_size: 30

                    Label:
                        id: nama_tanaman
                        text: 'menunggu data'
                        color: 0, 0, 0, 1

                    Label:
                        id: akurasi
                        text: 'menunggu data'
                        color: 0, 0, 0, 1

            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                spacing: 100
                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                width: self.minimum_width
                height: self.minimum_height

                Button:
                    text: 'Train page'
                    size_hint: None, None
                    size: 150, 50
                    background_color: 0.2, 0.3, 0.9, 1
                    on_release: app.change_train_page()

                Button:
                    text: 'Result page'
                    size_hint: None, None
                    size: 150, 50
                    background_color: 0.2, 0.3, 0.9, 1
                    on_release: app.change_result_page()
