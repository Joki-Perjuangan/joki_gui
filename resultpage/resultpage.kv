<ResultPage>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.828, 0.917, 0.972, 1  # Set the background color (r, g, b, a)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 100
            padding: 10
            spacing: 10

            canvas.before:
                Color:
                    rgba: 0, 0.382, 0.597, 1  # Set the background color for the header
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'horizontal'
                halign: 'center'
                valign: 'middle'
                padding: 60, 0
                spacing: 30

                Image:
                    source:  'img.png'
                    size_hint: None, None
                    size: 70, 70
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Label:
                    text: '[b]SISTEM KLASIFIKASI TANAMAN OBAT BERDASARKAN CITRA DAUN METODE FUZZY KNN[/b]'
                    font_size: 30
                    color: 1,1,1, 1  # Text color white
                    markup: True
                    valign: 'middle'
                    text_size: self.size

        Widget:
            height: 10

        BoxLayout:
            orientation: 'vertical'
            padding: 40
            spacing: 10
            size_hint: None, None
            pos_hint: {'center_x': 0.5}
            width: self.minimum_width
            height: self.minimum_height

            Label:
                text: 'Result Menu'
                font_size: 40
                color: 0, 0, 0, 1
                pos_hint: {'center_x':0.5}

            Widget:
                size_hint_y: None
                height: 40

            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                spacing: 250
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Button:
                    text: 'Melihat hasil'
                    size_hint: None, None
                    size: 150, 40
                    background_color: 0.2, 0.3, 0.9, 1
                    on_release: root.show()

                Button:
                    text: 'Reset Hasil'
                    size_hint: None, None
                    size: 150, 40
                    background_color: 0.2, 0.3, 0.9, 1
                    on_release: root.reset()


            Widget:
                size_hint_y: None
                height: 30

            BoxLayout:
                orientation: 'horizontal'
                padding: 40
                spacing: 210
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10

                    Label:
                        text: 'Akurasi : '
                        color: 0, 0, 0, 1
                        font_size: 30

                    Widget:
                        size_hint_y: None
                        height: 10

                    Label:
                        id: akurasi
                        text: 'Menunggu data'
                        color: 0, 0, 0, 1

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10

                    Label:
                        text: 'Nilai LBP :'
                        color: 0, 0, 0, 1
                        font_size: 30

                    Widget:
                        size_hint_y: None
                        height: 10

                    Label:
                        id: Nilai_Lbp
                        text: 'Menunggu data'
                        color: 0, 0, 0, 1

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10

                    Label:
                        text: 'Nilai HOG :'
                        color: 0, 0, 0, 1
                        font_size: 30

                    Widget:
                        size_hint_y: None
                        height: 10

                    Label:
                        id: Nilai_Hog
                        text: 'Menunggu data'
                        color: 0, 0, 0, 1

            Widget:
                size_hint_y: None
                height: 20

            Label:
                text: 'Nama Tanaman'
                color: 0, 0, 0, 1
                font_size: 30

            Widget:
                size_hint_y: None
                height: 5

            Label:
                id: nama_tanaman
                text: 'menunggu data'
                color: 0, 0, 0, 1

            Widget:
                size_hint_y: None
                height: 60

            Button:
                text: 'Test page'
                size_hint: None, None
                size: 150, 40
                pos_hint: {'center_x':0.5}
                background_color: 0.2, 0.3, 0.9, 1
                on_release: app.change_test_page()

            Widget:
                height: 60
